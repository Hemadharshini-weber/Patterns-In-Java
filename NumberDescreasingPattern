class NumberDescreasingPattern {
    public static void main(String[] args) {
        System.out.println("Hello, World!\n");
        int i,j,n=6;
        for(i=n;i>=1;i--)
        {
            for(j=1;j<=i;j++)
            {
                
                System.out.print(j+" ");
                }
                System.out.println();
            }
            
        }
    }
