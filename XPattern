class XPattern {
    public static void main(String[] args) {
        System.out.println("Hello, World!\n");
        int i,j,n=5,k,l;
        for(i=-(n-1);i<n;i++)
        {
            if(i<0)
            {
                l=-i;
            }
            else{
                l=i;
            }
            for(k=0;k<(n-l-1);k++)
            {
                System.out.print(" ");
            }
            for(j=1;j<=l+1;j++)
            {
                if(j==1||j==l+1)
                System.out.print("* ");
                else{
                    System.out.print("  ");
                }
            }
            System.out.println();
        }
    }
    
}
