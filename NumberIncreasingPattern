import java.util.*;
public class NumberIncreasingPattern {
    public static void main(String[] args) {
        System.out.println("Hello, World!\n");
        int i,j,n=6;
        for(i=1;i<=n;i++)
        {
            for(j=1;j<=i;j++)
            {
                
                System.out.print(j+" ");
                }
                System.out.println();
            }
            
        }
    }

/*
o/p
1
12
123
1234
12345
123456
*/
