class Kpattern {
    public static void main(String[] args) {
        System.out.println("Hello, World!\n");
        int i,j,l,n=4;
        for(i= -n;i<n;i++)
        {
            if(i<0)
            {
                l=-i;
            }
            else{
                l= +i;
            }
            for(j=1;j<=(l+1);j++)
            {
                System.out.print("*");
            }
            System.out.println();
        }
        
    }
    
}
