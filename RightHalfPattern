class NumberDescreasingPattern {
    public static void main(String[] args) {
        System.out.println("Hello, World!\n");
        int i,j,n=5;
        for(i=1;i<=n;i++)
        {
            for(j=1;j<=i;j++)
            {
                
                System.out.print("* ");
            }
                System.out.println();
            }
            
        }
    }
